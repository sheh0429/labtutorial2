<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="labtutorial2.AdoptionPage"
             Title="Adoption Confirmation">
    <ContentPage.Background>
        <RadialGradientBrush Center="0.5,0.5" Radius="0.8">
            <GradientStop Color="#FFFDE7" Offset="0.0" />
            <GradientStop Color="#B2EBF2" Offset="1.0" />
        </RadialGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Spacing="20"
        Padding="30">

        <Label 
            x:Name="ThankYouLabel" Text="Thank You! ❤️"
            FontSize="32"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="Black"
            Opacity="0" Loaded="OnPageLoaded" />
        <Label 
            Text="Your adoption request for Terry has been received. We will contact you shortly."
            FontSize="18"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            TextColor="#333333" />
    </VerticalStackLayout>
</ContentPage>